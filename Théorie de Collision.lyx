\begin{equation}
{\Psi}_{asy}(r,\ \theta,\ \phi)=\sum_{l}\left[{i}^{l}(2l+1)\frac{\sin\left(kr-l\frac{\pi}{2}\right)}{kr}+{f}_{l}\frac{{\e}^{\i kr}}{r}\right]{P}_{l}(\cos{\theta})\label{ch2eq/5}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Développons le 
\begin_inset Formula $\sin$
\end_inset

 dans l'équatiion 
\begin_inset CommandInset ref
LatexCommand eqref
reference "ch2eq/3"
plural "false"
caps "false"
noprefix "false"

\end_inset

 : 
\begin_inset Formula 
\[
{\Psi}_{dif}(r,\ \theta,\ \phi)=\sum_{l}{C}_{l}\frac{\sin\left(kr-l\frac{\pi}{2}\right)\cos{{\delta}_{l}}+\cos\left(kr-l\frac{\pi}{2}\right)\sin{{\delta}_{l}}}{kr}{P}_{l}(\cos{\theta})
\]

\end_inset


\end_layout

\begin_layout Standard
Selon 
\shape smallcaps
Euler
\shape default
 :
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\begin{split}\cos\left(kr-l\frac{\pi}{2}\right) & ={\e}^{\i\left(kr-l\frac{\pi}{2}\right)}-\i\sin\left(kr-l\frac{\pi}{2}\right)\\
 & ={\left({\e}^{-\i\frac{\pi}{2}}\right)}^{l}{\e}^{\i kr}-\i\sin\left(kr-l\frac{\pi}{2}\right)\\
 & ={(-\i)}^{l}{\e}^{\i kr}-\i\sin\left(kr-l\frac{\pi}{2}\right)
\end{split}
\]

\end_inset


\end_layout

\begin_layout Standard
D'où : 
\begin_inset Formula 
\[
\begin{split}\sin\left(kr-l\frac{\pi}{2}+{\delta}_{l}\right) & =\sin\left(kr-l\frac{\pi}{2}\right)\cos{{\delta}_{l}}+\cos\left(kr-l\frac{\pi}{2}\right)\sin{{\delta}_{l}}\\
 & =\sin\left(kr-l\frac{\pi}{2}\right)\cos{{\delta}_{l}}+{(-\i)}^{l}{\e}^{\i kr}\sin{{\delta}_{l}}-\i\sin\left(kr-l\frac{\pi}{2}\right)\sin{{\delta}_{l}}\\
 & =\sin\left(kr-l\frac{\pi}{2}\right)\left(\cos{{\delta}_{l}}-\i\sin{{\delta}_{l}}\right)+{(-\i)}^{l}{\e}^{\i kr}\sin{{\delta}_{l}}\\
 & =\sin\left(kr-l\frac{\pi}{2}\right){\e}^{-\i{\delta}_{l}}+{(-\i)}^{l}{\e}^{\i kr}\sin{{\delta}_{l}}
\end{split}
\]

\end_inset


\end_layout

\begin_layout Standard
Ce qui donne :
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
{\Psi}_{dif}(r,\ \theta,\ \phi)=\sum_{l}{C}_{l}\left[{\e}^{-\i{\delta}_{l}}\frac{\sin\left(kr-l\frac{\pi}{2}\right)}{kr}+{(-\i)}^{l}\frac{\sin{{\delta}_{l}}}{k}\frac{{\e}^{\i kr}}{r}\right]{P}_{l}(\cos{\theta})
\]

\end_inset


\end_layout

