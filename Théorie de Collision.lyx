\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\begin{split}{C}_{l} & ={i}^{l}(2l+1){\e}^{\i{\delta}_{l}}\\
{f}_{l} & ={(-\i)}^{l}{C}_{l}\frac{\sin{{\delta}_{l}}}{k}=(2l+1)\frac{\sin{{\delta}_{l}}}{k}{\e}^{\i{\delta}_{l}}
\end{split}
\end{align*}

\end_inset


